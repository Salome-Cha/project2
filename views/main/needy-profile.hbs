<div class="global-body-margin-top">


<div class="specific-profile-container">

<div class='container global-profile-view'>
    <div class="col-sm-2 profile-photo">
              <img class="user-photo" src="{{user.photo}}">
    </div>

<div class="col-sm-6">
    <div class="container identity-big-bloc">
     
        <div class="identity-container">
            <div class="identity-bloc">
              <h4 class='profile-title'> My Profile</h4>
              <ul>
              <li>Username: {{user.userName}} </li>
              <li>First Name:  {{user.firstName}} </li>
              <li>Last Name:  {{user.lastName}} </li>
              <li>City: {{user.city}} </li>
             <li>Email: {{user.email}} </li>
              <li>Type of help needed: {{user.needType.name}} </li>
             </ul>
            </div>
        </div>
    </div>
</div>


<div class="col-sm-4">
  <div class="bloc-description-link">
     <div class="description-profile">
        <h4 class='contact-type'>  Description: </h4>
        <p class='description-profile-text'> {{user.Description}} </p>
    </div>
      <a class="submit-button" href="/my-n-profile/{{user._id}}/edit"> Edit my profile </a>
  </div>
</div>

</div>
</div>
</div>
</div>
