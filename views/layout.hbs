  <link rel="stylesheet" href="/stylesheets/style.css" />
  
</head>


<body>

<!-- NAVBAR -->

<!-- IF HOMEPAGE :: NAVBAR HAS A TRANSPARENT BACKGROUND -->



{{#if url }}
<nav class="navbar navbar-expand-lg navbar-light bg-transparent">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    
    <div class="inline-navbar">
      <ul class="navbar-nav mr-auto">
        <div class="navbar-flex container">

      <div class="segment-nav">
            <li class="nav-item left active">
              <a id="nav-element" class="nav-link" href="/"> Homepage <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item left">
              <a id="nav-element" class="nav-link" href="/services"> Services </a>
            </li>
      </div>  

      <div class="segment-nav"> 
          <img src="/images/logo-nobackground.png" class="navbar-brand main-logo-nav" alt="logo" />
      </div>

      <div  class="segment-nav"> 
            <li class="nav-item right">
              <a id="nav-element" class="nav-link" href="/h-map">Help Hub</a>
            </li>
            {{#if (not user)}}
            <li class="nav-item right">
              <a id="nav-element" class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item right">
              <a id="nav-element" class="signup-button" href="/signup"> Signup</a>
            </li>
            {{else}}

            <form method="POST" action="/logout">
            <button type="submit" class="signup-button logout-button"> Logout </button>
            </form>

         {{#eq user.userType 'helper'}} 
             <li class="nav-item right">
               <a id="nav-element" class="signup-button" href="/my-h-profile/{{loggedUser._id}}"> My Profile</a>
            </li>
            {{else}}  
            <li class="nav-item right">
              <a id="nav-element" class="signup-button" href="/my-n-profile/{{loggedUser._id}}"> My Profile</a>
            </li>
          {{/eq}} 
            {{/if}}
      </div>     

        </div>
      </ul>
    </div>
  </div>
</nav>


{{else}}

<!-- ELSE IF WE ARE ON OTHER PAGES THAN HOMEPAGE :: NAVBAR HAS A GREY BACKGROUND -->

<nav class="navbar navbar-expand-lg navbar-light bg-secondary">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    
    <div class="inline-navbar">
      <ul class="navbar-nav mr-auto">
        <div class="navbar-flex container">
      <div class="segment-nav">
            <li class="nav-item left active">
              <a id="nav-element" class="nav-link" href="/">Homepage <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item left">
              <a id="nav-element" class="nav-link" href="/services"> Services </a>
            </li>
        </div>  

      <div class="segment-nav"> 
          <img src="/images/logo-nobackground.png" class="navbar-brand main-logo-nav" alt="logo" />
      </div>

      <div  class="segment-nav"> 
            <li class="nav-item right">
              <a id="nav-element" class="nav-link" href="/h-map">Help Hub</a>
            </li>
            {{#if (not user)}}
            <li class="nav-item right">
              <a id="nav-element" class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item right">
              <a id="nav-element" class="signup-button" href="/signup"> Signup</a>
            </li>
            {{else}}

             <form method="POST" action="/logout">
            <button type="submit" class="signup-button logout-button"> Logout </button>
            </form>

           {{#eq loggedUser.userType 'helper'}}
            <li class="nav-item right">
              <a id="nav-element" class="signup-button" href="/my-h-profile/{{loggedUser._id}}"> My Profile</a>
            </li>
            {{else}}
            <li class="nav-item right">
              <a id="nav-element" class="signup-button" href="/my-n-profile/{{loggedUser._id}}"> My Profile</a>
            </li>
         {{/eq}}  
         
             {{/if}}
      </div>       
        </div>
      </ul>
    </div>
  </div>
</nav>
{{/if}}





